<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('http://loremflickr.com/1000/1000/movie');">
      <div class="container">
        <h1><%= @list.name %></h1>
        <p></p>
      </div>
    </div>

<div class="container flexbox">
<%= link_to 'back to all lists', lists_path, class: "btn btn-flat" %>
<%= link_to 'add a movie', new_list_bookmark_path(@list), class: "btn btn-flat"%>
</div>

<span>\</span>


<div class="container">
  <div class="cards">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card-detail">
        <div class="card-category" style='background-image: url(<%= bookmark.movie.poster_url %>)' >
        </div>
        <div class="card-detail-infos">
          <div class="flexbox">
            <h3><%= bookmark.movie.title %></h3>
            <p><%= bookmark.movie.rating %> <i class="far fa-star"></i></p>
          </div>
          <div class="overview">
            <p><%= bookmark.movie.overview %></p>
          </div>
          <div class="flexbox bottom-text">
            <p><i class="fas fa-quote-left"></i> <%= bookmark.comment %></p>
            <p style="color: red"><%= link_to 'delete',  bookmark_path(bookmark), method: :delete %></p>         
          </div>

          <h2 class="card-detail-pricing"></h2>

          <div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>





